<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tool="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8000">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <AutoCompleteTextView
            android:id="@+id/actw_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/monthCount"
            android:completionThreshold="1"
            android:gravity="center"
            android:hint="标题(必填项)"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="26sp"
            tool:ignore="HardcodedText"/>

        <AutoCompleteTextView
            android:id="@+id/actw_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actw_title"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:completionThreshold="1"
            android:gravity="left|top"
            android:hint="消费项目(可以不填)"
            android:lines="6"
            android:maxLines="6"
            android:textColor="#fff"
            android:textColorHint="#BCBCBC"
            android:textSize="18sp"
            tool:ignore="HardcodedText"/>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/actw_content"
            android:layout_alignRight="@id/actw_content"
            android:layout_below="@id/actw_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/actw_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:hint="输入日期1~31\n(必填项)"
                android:inputType="number"
                android:maxLines="2"
                android:singleLine="false"
                android:textColor="#fff"
                android:textColorHint="#BCBCBC"
                android:textSize="20sp"
                tool:ignore="HardcodedText"/>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:hint="金额\n(必填项)"
                android:inputType="numberDecimal"
                android:maxLines="2"
                android:singleLine="false"
                android:textColor="#fff"
                android:textColorHint="#BCBCBC"
                android:textSize="20sp"
                tool:ignore="HardcodedText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/actw_content"
            android:layout_alignRight="@id/actw_content"
            android:layout_below="@id/ll_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgbtn2"
                android:text="确定"
                android:textColor="#fff"
                android:textSize="20sp"
                tool:ignore="HardcodedText"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgbtn2"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="20sp"
                tool:ignore="HardcodedText"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>